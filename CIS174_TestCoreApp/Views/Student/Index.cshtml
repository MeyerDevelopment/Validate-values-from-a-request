
@model IEnumerable<CIS174_TestCoreApp.Models.StudentViewModel>
@{
    var id = Convert.ToInt32(ViewContext.RouteData.Values["id"]);
}


<!DOCTYPE html>
@if (id>7){

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>


<body>
    <h4>Hello Admin</h4>
    <h4>Students</h4>
    <hr />
    <table cellpadding="0" cellspacing="0" id="CustomerGrid">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Grade</th>
        </tr>
        @foreach (var item in Model)
            {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Grade</td>
        </tr>
            }
    </table>
</body>
</html>
}

@if(id<2){
<html>
<body>
    <meta name="viewport" content="width=device-width" />
    <h4>You do not have a sufficient access level to view this data.</h4>
</body>
</html>
}
@if(id>1 && id<8){
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Hello Admin</title>
</head>


<body>
    <h4>Students</h4>
    <hr />
    <table cellpadding="0" cellspacing="0" id="CustomerGrid">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Grade</th>
        </tr>
        @foreach (var item in Model)
            {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
        </tr>
            }
    </table>
</body>
</html>
}

